---
interface Props {
  title: string;
  tags: string[];
  image?: string;
}

const { title, tags, image } = Astro.props;
---

<div
  class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-shadow flex flex-col items-center pb-6"
>
  <div class="w-full aspect-[4/3] bg-gray-400 mb-6">
    {
      image && (
        <img src={image} alt={title} class="w-full h-full object-cover" />
      )
    }
  </div>

  <h3 class="text-xl font-bold text-gray-800 mb-4">{title}</h3>

  <div class="flex gap-2">
    {
      tags.map((tag) => (
        <span class="px-3 py-1 border border-gray-400 rounded-full text-xs font-medium text-gray-600">
          {tag}
        </span>
      ))
    }
  </div>
</div>

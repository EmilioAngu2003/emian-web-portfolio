---
// Button.astro
interface Props {
  href?: string;
  variant?: "primary" | "secondary" | "outline";
  size?: "sm" | "md" | "lg";
  class?: string;
  [x: string]: any;
}

const {
  href,
  variant = "primary",
  size = "md",
  class: className,
  ...rest
} = Astro.props;

const Tag = href ? "a" : "button";

const variants: Record<string, string> = {
  primary: "bg-primary",
  secondary: "bg-secondary",
};

const sizes = {
  sm: "px-3 py-1.5 text-sm",
  md: "px-5 py-2.5 text-base font-medium",
  lg: "px-8 py-4 text-lg font-bold",
};

const baseStyles =
  "text-white inline-flex items-center justify-center rounded-xl transition-all duration-200  hover:scale-105 active:scale-100 cursor-pointer";
---

<Tag
  href={href}
  class:list={[baseStyles, variants[variant], sizes[size], className]}
  {...rest}
>
  <slot />
</Tag>

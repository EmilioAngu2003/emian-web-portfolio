---
import SectionWrapper from "@components/sections/SectionWrapper.astro";
import Svg from "@components/ui/Svg.astro";

const stack = [
  {
    title: "Backend",
    groups: [
      [
        { name: "C#", icon: "c-sharp" },
        { name: ".NET", icon: "dotnet" },
      ],
      [
        { name: "SQL Server", icon: "sql-server" },
        { name: "Entity Framework", icon: "entity-framework" },
        { name: "Redis", icon: "redis" },
      ],
    ],
  },
  {
    title: "Frontend",
    groups: [
      [
        { name: "HTML", icon: "html" },
        { name: "CSS", icon: "css" },
        { name: "JavaScript", icon: "javascript" },
      ],
      [
        { name: "React", icon: "react" },
        { name: "Bootstrap", icon: "bootstrap" },
        { name: "jQuery", icon: "jquery" },
      ],
    ],
  },
  {
    title: "Herramientas",
    groups: [
      [
        { name: "Git", icon: "git" },
        { name: "Docker", icon: "docker" },
      ],
      [
        { name: "Visual Studio 2022", icon: "visual-studio" },
        { name: "VS Code", icon: "vs-code" },
      ],
    ],
  },
];
---

<section class="bg-base-300">
  <SectionWrapper
    tagName="div"
    class="h-content flex justify-center items-center"
  >
    <div class="flex-1 w-full">
      <header>
        <h2
          class="text-3xl md:text-5xl font-bold text-center text-gray-800 mb-8 2xl:mb-16"
        >
          Mi Stack Principal
        </h2>
      </header>

      <ul class="flex flex-col gap-8 justify-center items-center">
        {
          stack.map((s) => (
            <li class="w-full lg:w-auto">
              <h3 class="text-center text-xl font-medium">{s.title}</h3>
              <ul class="flex flex-row gap-8 mt-4 w-full overflow-x-scroll lg:w-auto lg:overflow-x-visible">
                {s.groups.map((group) => (
                  <li class="flex flex-nowrap text-nowrap gap-12 bg-base-100 px-12 py-6 rounded-lg">
                    {group.map((tech) => (
                      <div class="flex flex-col items-center gap-2">
                        <Svg
                          id={tech.icon}
                          class="size-14 2xl:size-20"
                          sprite="stack"
                        />
                        <span>{tech.name}</span>
                      </div>
                    ))}
                  </li>
                ))}
              </ul>
            </li>
          ))
        }
      </ul>
    </div>
  </SectionWrapper>
</section>
